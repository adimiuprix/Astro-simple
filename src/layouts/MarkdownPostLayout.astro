---
const { frontmatter } = Astro.props;
---

<h1>{frontmatter.title}</h1>
<h2 style="font-style: italic;">{frontmatter.description}</h2>
<p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
<p>Written by {frontmatter.author}</p>
<img src={frontmatter.image.url} width='300px' alt={frontmatter.image.alt} />
<ul style="display: flex; list-style: none; gap: 10px">
  {frontmatter.tags.map(tag => <li>#{tag}</li>)}
</ul>
<slot />
